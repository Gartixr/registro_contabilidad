<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.4.1/dist/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
{% endblock %}
{% block head_js %}
<script src="https://code.jquery.com/jquery-3.4.1.slim.min.js" integrity="sha384-J6qa4849blE2+poT4WnyKhv5vZF5SrPo0iEjwBvKU7imGFAV0wwj1yYfoRSJoZ+n" crossorigin="anonymous"></script>
<script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js" integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@4.4.1/dist/js/bootstrap.min.js" integrity="sha384-wfSDF2E50Y2D1uUdj0O3uMBJnjuUD4Ih7YwaYd1iqfktj0Uod8GCExl3Og8ifwB6" crossorigin="anonymous"></script>
{% endblock %}

<style>

.extra {
    display: flex;
    justify-content: space-around;
}

.form {
  display: flex;
  justify-content: center;
    flex-direction: column;
    align-items: flex-start;
}

.noTableData{
  text-align: center;
  margin-top: 10px;
  font-weight: bold;
  font-size: 18px;
}

.formDiv{
  padding: 25px 50px 0px 50px;
}

.title{
  font-size: 64px;
  font-weight: bold;
  text-align: center;
}

.table {
  padding: 50px 50px 50px 50px;
}

</style>


<div class="title">Registro Usuarios</div>

<div class="formDiv">
  {{ form_start(form) }}
  {{ form_end(form) }}
</div>

<div class="table">
  <table class="table table-striped table-responsive-sm" style="padding: 50px;">
    <tr>
      {% for info in table_info %}
          <th>{{ info }}</th>
      {% endfor %}
    </tr>
  {%if user_data != null%}
  {% for data in user_data %}
    <tr>
          <td>{{ data.name }}</td>
          <td>{{ data.email }}</td>
          <td>{{ data.tlf }}</td>
          <td>{{ data.proveer }}</td>
          <td>{%if data.active == true %} Si {%else%} No {%endif%}</td>
          <td class="extra">
              <a href="/view/{{data.id}}">üîé</a>
              <a href="/edit/{{data.id}}">‚úèÔ∏è</a>
              <a href="/delete/{{data.id}}">‚ùå</a>
          </td>
    </tr>
  {% endfor %}
  {%else%}
  </table>
  <div class="noTableData">No hay datos registrados!</div>
  {%endif%}
</table>
</div>